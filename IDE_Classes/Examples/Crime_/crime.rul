(RULE: CrimeInPrivateDomain 10
	IF
		(CLASS: Crime OBJ: $GarthwaiteCase
			(
				(InStudy=="yes") OR
				(
					(InBedroom=="yes") OR
					(InDressingRoom=="yes"))))
	THEN (
		(MODIFY OBJ: $GarthwaiteCase 
			(CrimeInPrivateDomain "yes")
		 10 0.1)
	) COMMENT: "")

(RULE: NoSignOfBrakein 10
	IF
		(CLASS: Crime OBJ: $GarthwaiteCase
			(
				(Footprints=="no") OR
				(WindowsDoorsLocked=="yes")))
	THEN (
		(MODIFY OBJ: $GarthwaiteCase 
			(NoSignOfBrakein "yes")
		 10 0.1)
	) COMMENT: "")

(RULE: VictimeDidNotStrugle 10
	IF
		(CLASS: Crime OBJ: $GarthwaiteCase
			(
				(FornitureDisturbed=="no") AND
				(MarksFromAttacker=="no")))
	THEN (
		(MODIFY OBJ: $GarthwaiteCase 
			(VictimeDidNotStrugle "yes")
		 10 0.1)
	) COMMENT: "")

(RULE: Start 20
	IF
		(CLASS: COSMOS_START OBJ: $x
			(init_status==1))
	THEN (
		(MAKE CLASS: Crime OBJ: GarthwaiteCase
			(VictimeKnewAndTrustedKiller "unknown")
			(InStudy "unknown")
			(InBedroom "unknown")
			(InDressingRoom "unknown")
			(Footprints "unknown")
			(WindowsDoorsLocked "unknown")
			(FornitureDisturbed "unknown")
			(MarksFromAttacker "unknown")
			(VictimeDidNotStrugle "unknown")
			(NoSignOfBrakein "unknown")
			(CrimeInPrivateDomain "unknown")
		)
		(MODIFY OBJ: $x 
			(init_status 2)
		 1000 0.001)
	) COMMENT: "")

(RULE: VictimeNewAndTrustedKiller 20
	IF
		(CLASS: Crime OBJ: $GarthwaiteCase
			(
				(VictimeDidNotStrugle=="yes") AND
				(
					(NoSignOfBrakein=="yes") AND
					(CrimeInPrivateDomain=="yes"))))
	THEN (
		(MODIFY OBJ: $GarthwaiteCase 
			(VictimeKnewAndTrustedKiller "yes")
		 10 0.1)
	) COMMENT: "")

(RULE: PrintAnswer 20
	IF
		(CLASS: Crime OBJ: $GarthwaiteCase
			(VictimeKnewAndTrustedKiller=="yes"))
	THEN (
		(PRINT 
			"The victime knew and trusted killer"
		)
	) COMMENT: "")

