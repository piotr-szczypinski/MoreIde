//***   Rules   ***

(RULE: InStudy 30
	IF
		(CLASS: Crime OBJ: $GarthwaiteCase
			(
				(InStudy!="yes") AND
				(InStudy!="no")))
	THEN (
		(READ PROMPT: "Did the crime occured in the victims study? (yes/no)" VAR: $s TYPE: s)
		(MODIFY OBJ: $GarthwaiteCase 
			(InStudy $s)
		 10 0.1)
	) COMMENT: "")

